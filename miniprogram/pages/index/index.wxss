/**index.wxss**/
@import '../../Components/scui/assets/font-icon/material.wxss';

page {
  background: fixed linear-gradient(to top, rgb(53, 92, 125), rgb(108, 91, 123), rgb(192, 108, 132));
  overflow-y: scroll
}

.legend{
  display: flex;
  flex-direction: row-reverse;
  color: white;
  font-size: 2vh;
  font-weight: 900;
  align-items: center
}
.legend1{
  width: 4vw;
  height: 2vh;
  background-color: lightblue;
  margin-left:2vw;
  margin-right:20px;
  border-radius:1vh
}
.legend2{
  width: 4vw;
  height: 2vh;
  margin-right:2vw;
  background-color: yellow;
  margin-left:2vw;
  border-radius:1vh
}
.firstPage{
  width: 100%;
  overflow-y: scroll
}
.container_box {
  margin: 10px 20px;
  background: rgba(212, 197, 197, 0.15);
  border-radius: 2vh;
  color: white;
  transition: transform 0.3s;
}
.timeHeader {
  /* position: absolute;
  top: 26px;
  left: 10px; */
  color: white;
  /* margin-left: 20px; */
  /* padding-top:5px; */
  height: 10vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 4vw;
  font-weight: 900;
}
.subTitle{
  font-size: 1.5vh;
  font-weight: 100;
}

.header_config {
  width: 32px;
  height: 32px;
  /* top: 26px; */
  left: 10px;
  transition: all 0.8s;
  position: absolute;
  -webkit-box-shadow: inset 0 0 1px rgba(204, 204, 204, 0.8);
  box-shadow: inset 0 0 1px rgba(204, 204, 204, 0.8);
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  color: #fff;
}

.header_config2 {
  width: 32px;
  height: 32px;
  top: 26px;
  left: 50px;
  transition: all 0.8s;
  position: absolute;
  -webkit-box-shadow: inset 0 0 1px rgba(204, 204, 204, 0.8);
  box-shadow: inset 0 0 1px rgba(204, 204, 204, 0.8);
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  color: #fff;
}

.iconfont {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  font-size: 18px;
  font-weight: lighter;
}
.canvas {
    width: 90%;
    height: 170px;
    margin-left:3%;
    overflow: hidden;
    z-index: 1
}

