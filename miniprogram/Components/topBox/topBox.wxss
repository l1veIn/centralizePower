@import '../userBox/userBox.wxss';

@import '../scui/sc-ui.wxss';
@import '../scui/assets/font-icon/material.wxss';
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  width: 100%;
  /* min-height: 600px; */
  overflow: hidden;
  position: fixed;
  /* top: 40%;  *//* left: 0;  */
  z-index: 102;
  /* background: #fafafa; */
  background: #eee;
  /* margin: -150px 0 0 0; */
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.27), 0 0 10px rgba(0, 0, 0, 0.06) inset;
}

.title {
  font-size: 4vh;
  height: 70px;
  margin: 20px;
  margin-bottom:0; 
  color: grey;
  border-bottom: 1px solid lightgray
}
