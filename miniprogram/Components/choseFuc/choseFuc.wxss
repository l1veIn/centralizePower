.login {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  float: right;
  width: calc(100% - 180rpx);
  height: 120rpx;
}


.timeHeader {
  /* position: absolute;
  top: 26px;
  left: 10px; */
  color: white;
  margin-left: 20px;
  /* padding-top:5px; */
  height: 54px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 3vh;
  font-weight: 900;
}


.container {
  margin: 10px 20px;
  background: rgba(212, 197, 197, 0.15);
  border-radius: 2vh;
  border: none;
  color: white;
  transition: transform 0.3s;
  padding:10px;
  display: flex;
  align-items: flex-start;
  /* flex-wrap: wrap; */
  overflow:  unset;
  /* color: #ffffff */
  /* display: flex; */
  flex-direction: column;
  padding:30px;
  min-height: 32vh;
}

.hover {
  transform: scale(1.05);
  background: rgba(212, 197, 197, 0.3);
}

.title {
  font-size: 4vh;
  font-family: BebasNeue-Regular;
  font-weight: 900;
}
.detail{
  padding-top: 10px;
  font-weight: 100;
  text-align: left;
  font-size: 3vh;
}
.title_2 {
  font-size: 3vh;
  font-family: BebasNeue-Regular;
  font-weight: 900;
}
.userIcon{
  height: 70px;
  width: 70px;
  border: 1px white solid;
  border-radius: 10px
}

.content{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center
}

.get-user-info, .get-user-info::after {
  border: none;
  color: transparent;
  background-color: transparent;
  line-height:  unset;
  box-sizing: unset
}
button{
  line-height:unset;
}
button::after{
  border:none
}

.charts_container {
    width: 100%;
    height: 100px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
    width: 100%;
    height: 100px;
    z-index: 1;
    position: relative
}