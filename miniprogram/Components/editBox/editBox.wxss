@import '../userBox/userBox.wxss';

@import '../scui/sc-ui.wxss';
@import '../scui/assets/font-icon/material.wxss';
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  width: 100%;
  /* min-height: 600px; */
  overflow: scroll;
  position: fixed;
  /* top: 40%;  *//* left: 0;  */
  z-index: 102;
  /* background: #fafafa; */
  background: #eee;
  /* margin: -150px 0 0 0; */
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.27), 0 0 10px rgba(0, 0, 0, 0.06) inset;
}
.timeHeader {
  /* position: absolute;
  top: 26px;
  left: 10px; */
  color:  grey;
  /* margin-left: 20px; */
  /* padding-top:5px; */
  height: 54px;
  display: flex;
  justify-content: center;
  border-bottom: 1px solid lightgray;
  align-items: center;
  font-size: 3vh;
  font-weight: 900;
}
.title {
  height: 54px;
  padding: 20px;
  margin-bottom:0; 
  color: grey;
  border-bottom: 1px solid lightgray
}
.icon-arrow_up:before {
  content: '\E617';
}
.header_config {
  width: 32px;
  height: 32px;
  top: 26px;
  left: 10px;
  transition: all 0.8s;
  position: absolute;
  -webkit-box-shadow: inset 0 0 1px rgba(204, 204, 204, 0.8);
  box-shadow: inset 0 0 1px rgba(204, 204, 204, 0.8);
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  color: #fff;
}
.iconfont {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  font-size: 18px;
  font-weight: lighter;
}