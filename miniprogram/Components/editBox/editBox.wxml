      <sc-checkbox wx:for="{{groupInfo.userList}}" wx:key="index" label="{{item.userInfo.nickName}}" value="{{item}}" sc-class="sc-checkbox" checked="{{checked[index]}}"></sc-checkbox>
    </sc-checkbox-group>
