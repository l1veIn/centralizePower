.echart_panel{
  width: 100%;
  height: 100%
}
.container {
  margin: 10px 20px;
  background: rgba(212, 197, 197, 0.15);
  border-radius: 2vh;
  border: none;
  color: white;
  transition: transform 0.3s;
  padding:10px;
  display: flex;
  align-items: center;
  /* flex-wrap: wrap; */
  overflow:  unset;
  /* color: #ffffff */
}

.hover {
  transform: scale(1.05);
  background: rgba(212, 197, 197, 0.3);
}

.title {
  font-size: 6vh;
  font-family: BebasNeue-Regular;
  font-weight: 900;
  word-break: keep-all;
  overflow: hidden
}
.title_2 {
  font-size: 3vh;
  font-family: BebasNeue-Regular;
  font-weight: 900;
}
.userIcon{
  height: 70px;
  width: 70px;
  border: 1px white solid;
  border-radius: 10px;
  flex:1
}

.content{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100px;
}
.simplify{
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.subTitle{
  font-size: 1.5vh;
  font-weight: 100;
}
.simplify_block{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12vw;
  font-weight: 900;
}
.get-user-info, .get-user-info::after {
  border: none;
  color: transparent;
  background-color: transparent;
  line-height:  unset;
  box-sizing: unset
}
button{
  line-height:unset;
}
button::after{
  border:none
}

.charts_container {
    width: 100%;
    height: 100px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
    width: 100%;
    height: 100px;
    z-index: 1;
    position: relative
}